/*
 * Example program to use 'varargs'.
 *
 * Program to sum the cubes of all the specified numbers.
 */


define sc()
{
	local s, i;

	s = 0;
	for (i = 1; i <= param(0); i++) {
		if (!isnum(param(i))) {
			print "parameter",i,"is not a number";
			continue;
		}
		s += param(i)^3;
	}
	return s;
}

if (config("resource_debug") & 3) {
    print "sc(a, b, ...) defined";
}
